<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog /liquibase/xsd/dbchangelog-4.9.xsd">

    <!-- 1 - create vehicle table -->
    <changeSet id="1-create-vehicle" author="dev-ricks">
        <createTable tableName="vehicle">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_vehicle"/>
            </column>
            <column name="license_plate" type="VARCHAR(100)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_vehicle_license_plate"/>
            </column>
            <column name="make" type="VARCHAR(150)"/>
            <column name="model" type="VARCHAR(150)"/>
        </createTable>
        <rollback>
            <dropTable tableName="vehicle"/>
        </rollback>
    </changeSet>
    <!-- 2 - create driver table -->
    <changeSet id="2-create-driver" author="dev-ricks">
        <createTable tableName="driver">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_driver"/>
            </column>
            <column name="name" type="VARCHAR(200)"/>
            <column name="license_number" type="VARCHAR(100)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uk_driver_license_number"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="driver"/>
        </rollback>
    </changeSet>
    <!-- 3 - create inspection table with FK to vehicle -->
    <changeSet id="3-create-inspection" author="dev-ricks">
        <createTable tableName="inspection">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_inspection"/>
            </column>
            <column name="inspection_date" type="DATE"/>
            <column name="status" type="VARCHAR(100)"/>
            <column name="vehicle_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="inspection"
                baseColumnNames="vehicle_id"
                referencedTableName="vehicle"
                referencedColumnNames="id"
                constraintName="fk_inspection_vehicle"
                onDelete="CASCADE"/>

        <createIndex tableName="inspection" indexName="idx_inspection_vehicle_id">
            <column name="vehicle_id"/>
        </createIndex>

        <rollback>
            <dropTable tableName="inspection"/>
        </rollback>
    </changeSet>
</databaseChangeLog>